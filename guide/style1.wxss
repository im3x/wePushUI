.guide-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 9998;
  display: flex;
  padding-left: 20%;
  align-items: flex-start;
  justify-content: flex-start;
  flex-direction: column;
  color: #EEE;
  font-size: 28rpx;
}
.guide-bg > view {
  display: flex;
  justify-content: center;
}

.number {
  width: 22px;
  height: 22px;
  border-radius: 25px;
  background-color: #FFF;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 5px;
}
.line {
  margin: 5px;
  margin-left: 24rpx;
  height: 70rpx;
  border-left: 1px dashed #FFF;
}